---
import { Container, CtaCardSection } from '@components/odyssey-theme.js';
import Layout from '@layouts/Page.astro';
import HomeHeroSection from '@components/sections/heros/HomeHeroSection.astro';
import TextAndImageHero from '@components/sections/heros/TextAndImageHero.astro';
import TextCardSection from '@components/sections/TextCardSection.astro';
import CustomerQuoteSection from '@components/sections/CustomerQuoteSection.astro';
import ThreeColumnTextSection from '@components/sections/ThreeColumnTextSection.astro';

const seo = {
  title: 'Dr. Jan Duffy | Consenza Estates Las Vegas Specialist',
  description: 'Your premier specialist for Lennar homes in the exclusive Consenza Estates community in Las Vegas.',
};
---

<Layout {seo}>
  <TextAndImageHero reversed>
    <div slot="text-container">
      <h1>Your Consenza Estates Specialist - Dr. Jan Duffy</h1>
      <p>Welcome to your premier resource for Consenza Estates real estate. As a specialized REALTORÂ® with extensive knowledge of Lennar homes and the Consenza Estates community, I'm here to guide you through every step of your real estate journey.</p>
    </div>
    <div slot="image-container">
      <picture>
        <img
          src="/public/assets/images/home/consenza-estates-hero.jpg"
          alt="Consenza Estates luxury homes"
          id="home-hero-image"
        />
      </picture>
    </div>
  </TextAndImageHero>

  <Container>
    <div class="feature-listings">
      <h2 class="text-center">Featured Consenza Estates Listings</h2>
      <script src="https://em.realscout.com/widgets/realscout-web-components.umd.js" type="module"></script>
      <style>
        realscout-office-listings {
          --rs-listing-divider-color: rgb(101, 141, 172);
          width: 100%;
        }
      </style>
      <realscout-office-listings agent-encoded-id="QWdlbnQtMjI1MDUw" sort-order="PRICE_HIGH" listing-status="For Sale" property-types="SFR,MF,TC" price-min="500000"></realscout-office-listings>
    </div>
  </Container>

  <ThreeColumnTextSection>
    <div slot="column-1-body">
      <h2>$850K</h2>
      <p>Average Home Price</p>
    </div>
    <div slot="column-2-body">
      <h2>14</h2>
      <p>Average Days on Market</p>
    </div>
    <div slot="column-3-body">
      <h2>98%</h2>
      <p>List to Sale Price Ratio</p>
    </div>
  </ThreeColumnTextSection>

  <CustomerQuoteSection
    quoteText="Dr. Duffy's expertise with Lennar homes in Consenza Estates was invaluable. She knew every detail about the community and helped us find our dream home."
    customerName="The Martinez Family"
  />

  <CtaCardSection
    background="var(--theme-surface-2)"
    color="var(--theme-on-surface-2)"
    callToAction={{
      text: 'Schedule a Private Tour',
      href: '/contact',
      icon: 'mdi:calendar',
    }}
  >
    <h2>Ready to find your dream home in Consenza Estates?</h2>
    <p>Let me guide you through this exclusive community and help you discover the perfect Lennar home for your lifestyle.</p>
  </CtaCardSection>
</Layout>