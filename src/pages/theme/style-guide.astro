---
import Layout from '../../layouts/Page.astro';
import Container from '../../components/core/Container.astro';
import TextSection from '../../components/sections/TextSection.astro';
import ThreeColumnTextSection from '../../components/sections/ThreeColumnTextSection.astro';
import Button from '../../components/buttons/Button.astro';
import FormInput from '../../components/form-fields/FormInput.astro';
import FormSelect from '../../components/form-fields/FormSelectNew.astro';
import FormTextarea from '../../components/form-fields/FormTextarea.astro';

const seo = {
  title: 'Style Guide | Dr. Jan Duffy Real Estate',
  description: 'Luxury Real Estate in Las Vegas Style Guide',
};
---

<Layout {seo}>
  <Container>
    <section class="style-guide">
      <div class="style-guide__header">
        <h1>Las Vegas Luxury Real Estate Style Guide</h1>
        <p>This style guide showcases the premium design elements used throughout the site for an elevated luxury real estate experience.</p>
      </div>

      <div class="style-guide-section">
        <h2 class="section-header">Color Palettes</h2>
        <div class="color-palettes">
          <div class="theme-palette">
            <h3>Vegas Gold</h3>
            <div class="color-grid">
              <div class="color-item" style="background-color: #c8a951;">
                <span class="color-name">Primary</span>
                <span class="color-hex">#c8a951</span>
              </div>
              <div class="color-item" style="background-color: #f9f7f2;">
                <span class="color-name">Surface 1</span>
                <span class="color-hex">#f9f7f2</span>
              </div>
              <div class="color-item" style="background-color: #272727; color: white;">
                <span class="color-name">Surface 2</span>
                <span class="color-hex">#272727</span>
              </div>
            </div>
          </div>

          <div class="theme-palette">
            <h3>Luxury Gold</h3>
            <div class="color-grid">
              <div class="color-item" style="background-color: #D4AF37;">
                <span class="color-name">Primary</span>
                <span class="color-hex">#D4AF37</span>
              </div>
              <div class="color-item" style="background-color: #F8F5F0;">
                <span class="color-name">Surface 1</span>
                <span class="color-hex">#F8F5F0</span>
              </div>
              <div class="color-item" style="background-color: #2F2A1C; color: white;">
                <span class="color-name">Surface 2</span>
                <span class="color-hex">#2F2A1C</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="style-guide-section">
        <h2 class="section-header">Typography</h2>
        <div class="typography-examples">
          <div class="typography-item">
            <h1>Heading 1</h1>
            <p class="type-details">Roboto Serif Bold · 3.5rem</p>
          </div>
          <div class="typography-item">
            <h2>Heading 2</h2>
            <p class="type-details">Roboto Serif Bold · 2.5rem</p>
          </div>
          <div class="typography-item">
            <h3>Heading 3</h3>
            <p class="type-details">Roboto Serif Bold · 2rem</p>
          </div>
          <div class="typography-item">
            <h4>Heading 4</h4>
            <p class="type-details">Roboto Serif Bold · 1.5rem</p>
          </div>
          <div class="typography-item">
            <h5>Heading 5</h5>
            <p class="type-details">Roboto Serif Bold · 1.25rem</p>
          </div>
          <div class="typography-item">
            <h6>Heading 6</h6>
            <p class="type-details">Roboto Serif Bold · 1rem</p>
          </div>
          <div class="typography-item">
            <p>Body Text - Lato Regular. Professional luxury real estate services in Las Vegas with a focus on Consenza Estates and Lennar homes. Providing expert guidance for homebuyers and sellers in the premium Las Vegas market.</p>
            <p class="type-details">Lato Regular · 1rem</p>
          </div>
          <div class="typography-item quote">
            <blockquote>"Don't settle for what life gives you; make life better and build something." — Ashton Kutcher</blockquote>
            <p class="type-details">Lato Italic · 1.25rem</p>
          </div>
        </div>
      </div>

      <div class="style-guide-section">
        <h2 class="section-header">Buttons</h2>
        <div class="button-examples">
          <div class="button-row">
            <div class="button-item">
              <a href="#" class="btn">Primary Button</a>
              <span class="button-label">Button</span>
            </div>
            <div class="button-item">
              <a href="#" class="btn btn-unelevated">Unelevated Button</a>
              <span class="button-label">Unelevated Button</span>
            </div>
            <div class="button-item">
              <a href="#" class="btn btn-outlined">Outlined Button</a>
              <span class="button-label">Outlined Button</span>
            </div>
            <div class="button-item">
              <a href="#" class="btn">Button With Icon</a>
              <span class="button-label">With Custom Icon</span>
            </div>
          </div>
        </div>
      </div>

      <div class="style-guide-section">
        <h2 class="section-header">Forms</h2>
        <div class="form-examples">
          <div class="form-row">
            <div class="form-item">
              <FormInput type="text" label="Name" name="Name" placeholder="John Doe" />
              <span class="form-label">Input With Label</span>
            </div>
            <div class="form-item">
              <FormInput type="text" name="Name" placeholder="John Doe" />
              <span class="form-label">Input Without Label</span>
            </div>
          </div>
          <div class="form-row">
            <div class="form-item">
              <FormSelect label="Select Dropdown" name="select" options={["Consenza Estates", "Luxury Properties", "Lennar Homes"]} required />
              <span class="form-label">Select Dropdown</span>
            </div>
            <div class="form-item">
              <FormTextarea label="Message" name="message" placeholder="Your message here..." />
              <span class="form-label">Textarea</span>
            </div>
          </div>
        </div>
      </div>

      <div class="style-guide-section">
        <h2 class="section-header">Property Cards</h2>
        <div class="property-card-examples">
          <div class="property-card-row">
            <div class="property-card">
              <div class="property-image" style="background-image: url('/assets/images/home/classic-hero.jpg')"></div>
              <div class="property-details">
                <h3>Luxury Residence</h3>
                <p class="property-price">$1,250,000</p>
                <p class="property-features">4 BR | 3.5 BA | 3,200 SqFt</p>
                <p class="property-address">1234 Consenza Court, Las Vegas, NV</p>
              </div>
            </div>
            <div class="property-card">
              <div class="property-image" style="background-image: url('/assets/images/home/earth-hero.jpg')"></div>
              <div class="property-details">
                <h3>Modern Estate</h3>
                <p class="property-price">$1,975,000</p>
                <p class="property-features">5 BR | 4.5 BA | 4,800 SqFt</p>
                <p class="property-address">5678 Golden View Dr, Las Vegas, NV</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="style-guide-section">
        <h2 class="section-header">Testimonial Cards</h2>
        <div class="testimonial-examples">
          <div class="luxury-testimonial">
            <p class="testimonial-content">"Dr. Duffy's expertise in the Las Vegas luxury market made our home buying experience seamless and enjoyable. Her knowledge of Consenza Estates is unmatched."</p>
            <p class="testimonial-author">— Michael & Jennifer T.</p>
          </div>
        </div>
      </div>
    </section>
  </Container>
</Layout>

<style>
.style-guide {
  padding: 2rem 0;
}

.style-guide__header {
  text-align: center;
  margin-bottom: 4rem;
}

.style-guide__header h1 {
  position: relative;
  display: inline-block;
  margin-bottom: 1rem;
}

.style-guide__header h1::after {
  content: "";
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 3px;
  background: var(--luxury-gold, #D4AF37);
}

.style-guide-section {
  margin-bottom: 5rem;
}

.section-header {
  position: relative;
  margin-bottom: 2rem;
  padding-bottom: 1rem;
}

.section-header::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  width: 60px;
  height: 3px;
  background: var(--luxury-gold, #D4AF37);
}

/* Color palettes */
.color-palettes {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.theme-palette h3 {
  margin-bottom: 1rem;
}

.color-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
  gap: 1rem;
}

.color-item {
  height: 100px;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 1rem;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.color-name {
  font-weight: bold;
}

.color-hex {
  font-family: monospace;
  font-size: 0.9rem;
}

/* Typography */
.typography-examples {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.typography-item {
  position: relative;
}

.type-details {
  margin-top: 0.5rem;
  font-size: 0.8rem;
  color: #666;
  font-family: monospace;
}

.quote blockquote {
  font-style: italic;
  padding-left: 1rem;
  border-left: 3px solid var(--luxury-gold, #D4AF37);
}

/* Buttons */
.button-examples {
  margin: 2rem 0;
}

.button-row {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 2rem;
}

.button-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.button-label {
  font-size: 0.8rem;
  color: #666;
}

/* Forms */
.form-examples {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.form-row {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 2rem;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.form-label {
  font-size: 0.8rem;
  color: #666;
}

/* Property Cards */
.property-card-examples {
  margin: 2rem 0;
}

.property-card-row {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 2rem;
}

.property-card {
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.property-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 15px 30px rgba(0,0,0,0.15);
}

.property-image {
  height: 200px;
  background-size: cover;
  background-position: center;
}

.property-details {
  padding: 1.5rem;
}

.property-price {
  font-weight: bold;
  color: var(--luxury-gold, #D4AF37);
  font-size: 1.2rem;
  margin: 0.5rem 0;
}

.property-features {
  color: #666;
  margin-bottom: 0.5rem;
}

.property-address {
  font-size: 0.9rem;
}

/* Testimonial */
.testimonial-examples {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 2rem;
}

.luxury-testimonial {
  position: relative;
  padding: 2rem;
  background-color: white;
  border-radius: 8px;
  box-shadow: 0 10px 20px rgba(0,0,0,0.05);
}

.luxury-testimonial::before {
  content: "\201C";
  position: absolute;
  top: 10px;
  left: 10px;
  font-size: 5rem;
  color: rgba(212, 175, 55, 0.2);
  font-family: serif;
  line-height: 1;
}

.testimonial-content {
  font-style: italic;
  margin-bottom: 1rem;
}

.testimonial-author {
  font-weight: bold;
  text-align: right;
}

@media (max-width: 768px) {
  .color-grid, 
  .button-row, 
  .form-row, 
  .property-card-row {
    grid-template-columns: 1fr;
  }
}
</style>
