---
import { Button, Container, TextCardSection } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';

const seo = {
	title: 'Get Started using the Astro Odyssey Theme',
	description: 'Get started on how to setup and use this Astro theme.',
};
---

<Layout {seo}>
	<Container>
		<TextCardSection>
			<h1>Get Started with Odyssey</h1>
			<div class="cta-buttons__container">
        <Button
        href="https://github.com/treefarmstudio/odyssey-theme"
        outlined
        newTab
        >
        Get Odyssey Theme
      </Button>
        <Button
					href="/theme/theme-setup"
          >
          Theme Setup
				</Button>
        <Button
					href="/theme/customizing-odyssey"
          >
          Customizing Odyssey
				</Button>
			</div>
		</TextCardSection>
	</Container>
</Layout>

<style>
	.cta-buttons__container {
		display: flex;
		flex-wrap: wrap;
	}
	.cta-buttons__container :global(a) {
    margin-right: 1rem;
		margin-bottom: 1rem;
	}
</style>
