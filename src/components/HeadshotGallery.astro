
---
// HeadshotGallery.astro - Professional team headshot display component
const { team = [] } = Astro.props;

// Default team member if none provided
const defaultTeam = [
  {
    name: "Dr. Jan Duffy",
    title: "Luxury Real Estate Specialist",
    bio: "With over 15 years of experience in the Las Vegas luxury real estate market, Dr. Duffy specializes in Consenza Estates and high-end Lennar homes. Nevada State Board Certified with a Ph.D. in Business Administration and licensed to serve your Vegas real estate needs.",
    photo: "/assets/images/headshots/jan-duffy-1.jpg",
    email: "DrDuffy@bhhsnv.com",
    phone: "(702) 500-1955",
    credentials: ["NV License #S.0187391", "Ph.D. Business Administration", "Certified Luxury Home Specialist", "Berkshire Hathaway HomeServices"]
  }
];

// Use provided team or default if empty
const teamMembers = team.length > 0 ? team : defaultTeam;
---

<section class="headshot-gallery">
  <div class="luxury-container">
    <div class="section-header">
      <h2>Meet Our Exceptional Team</h2>
      <p class="subtitle">Industry experts committed to delivering excellence</p>
    </div>
    
    <div class="team-grid">
      {teamMembers.map((member) => (
        <div class="team-member">
          <div class="headshot-container">
            <img 
              src={member.photo} 
              alt={`${member.name}, ${member.title}`} 
              onError={(e) => {
                e.target.onerror = null;
                e.target.src = '/assets/images/headshots/jan-duffy-1.jpg';
              }}
            />
            <div class="bhhs-badge">
              <img src="/assets/images/bhhs-logo.png" alt="Berkshire Hathaway HomeServices" />
            </div>
          </div>
          <h3>{member.name}</h3>
          <p class="member-title">{member.title}</p>
          <p class="member-bio">{member.bio}</p>
          
          {member.credentials && (
            <div class="member-credentials">
              {member.credentials.map((credential) => (
                <span class="credential-badge">{credential}</span>
              ))}
            </div>
          )}
          
          <div class="member-contact">
            <a href={`mailto:${member.email}`} class="contact-link">
              <span class="icon">‚úâÔ∏è</span> {member.email}
            </a>
            {member.phone && (
              <a href={`tel:${member.phone.replace(/[^0-9]/g, '')}`} class="contact-link">
                <span class="icon">üì±</span> {member.phone}
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .headshot-gallery {
    padding: 4rem 0;
    background-color: var(--luxury-white);
  }
  
  .luxury-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
  }
  
  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--luxury-black, #333);
  }
  
  .subtitle {
    color: var(--luxury-gray, #666);
    font-size: 1.2rem;
    margin-top: -1rem;
  }
  
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 3rem;
    margin-top: 3rem;
  }
  
  .team-member {
    text-align: center;
    transition: transform 0.3s ease;
  }
  
  .team-member:hover {
    transform: translateY(-10px);
  }
  
  .headshot-container {
    width: 220px;
    height: 220px;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid var(--luxury-gold, #D4AF37);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    position: relative;
  }
  
  .headshot-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .team-member:hover .headshot-container img {
    transform: scale(1.05);
  }
  
  .bhhs-badge {
    position: absolute;
    bottom: -10px;
    right: -10px;
    width: 70px;
    height: 70px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--luxury-gold, #D4AF37);
    overflow: hidden;
    box-shadow: 0 3px 8px rgba(0,0,0,0.15);
  }
  
  .bhhs-badge img {
    width: 80%;
    height: auto;
    object-fit: contain;
  }
  
  .member-credentials {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
    margin-bottom: 1rem;
  }
  
  .credential-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background-color: rgba(212, 175, 55, 0.1);
    border: 1px solid rgba(212, 175, 55, 0.3);
    border-radius: 3px;
    color: var(--luxury-black, #333);
  }
  
  .team-member h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--luxury-black, #333);
  }
  
  .member-title {
    color: var(--luxury-gold, #D4AF37);
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .member-bio {
    font-size: 0.95rem;
    color: var(--luxury-gray, #666);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  
  .contact-link {
    display: inline-flex;
    align-items: center;
    color: var(--luxury-black, #333);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }
  
  .contact-link:hover {
    color: var(--luxury-gold, #D4AF37);
  }
  
  .icon {
    margin-right: 0.5rem;
  }
  
  @media (max-width: 768px) {
    .team-grid {
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: 2rem;
    }
    
    .headshot-container {
      width: 180px;
      height: 180px;
    }
  }
</style>
