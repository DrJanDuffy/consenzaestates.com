
---
// HeadshotGallery.astro - Professional team headshot display component
const { team = [] } = Astro.props;

// Default team member if none provided
const defaultTeam = [
  {
    name: "Dr. Jan Duffy",
    title: "Luxury Real Estate Specialist",
    bio: "With years of experience in the Las Vegas luxury real estate market, Dr. Duffy provides exceptional service to discerning clients.",
    photo: "/assets/images/headshots/jan-duffy-3.jpg",
    email: "DrDuffy@bhhsnv.com"
  }
];

// Use provided team or default if empty
const teamMembers = team.length > 0 ? team : defaultTeam;
---

<section class="headshot-gallery">
  <div class="luxury-container">
    <div class="section-header">
      <h2>Meet Our Exceptional Team</h2>
      <p class="subtitle">Industry experts committed to delivering excellence</p>
    </div>
    
    <div class="team-grid">
      {teamMembers.map((member) => (
        <div class="team-member">
          <div class="headshot-container">
            <img src={member.photo} alt={`${member.name}, ${member.title}`} />
          </div>
          <h3>{member.name}</h3>
          <p class="member-title">{member.title}</p>
          <p class="member-bio">{member.bio}</p>
          <div class="member-contact">
            <a href={`mailto:${member.email}`} class="contact-link">
              <span class="icon">✉️</span> Contact
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .headshot-gallery {
    padding: 4rem 0;
    background-color: var(--luxury-white);
  }
  
  .luxury-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
  }
  
  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--luxury-black, #333);
  }
  
  .subtitle {
    color: var(--luxury-gray, #666);
    font-size: 1.2rem;
    margin-top: -1rem;
  }
  
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 3rem;
    margin-top: 3rem;
  }
  
  .team-member {
    text-align: center;
    transition: transform 0.3s ease;
  }
  
  .team-member:hover {
    transform: translateY(-10px);
  }
  
  .headshot-container {
    width: 220px;
    height: 220px;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid var(--luxury-gold, #D4AF37);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }
  
  .headshot-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .team-member:hover .headshot-container img {
    transform: scale(1.05);
  }
  
  .team-member h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--luxury-black, #333);
  }
  
  .member-title {
    color: var(--luxury-gold, #D4AF37);
    font-weight: 600;
    margin-bottom: 1rem;
  }
  
  .member-bio {
    font-size: 0.95rem;
    color: var(--luxury-gray, #666);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  
  .contact-link {
    display: inline-flex;
    align-items: center;
    color: var(--luxury-black, #333);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }
  
  .contact-link:hover {
    color: var(--luxury-gold, #D4AF37);
  }
  
  .icon {
    margin-right: 0.5rem;
  }
  
  @media (max-width: 768px) {
    .team-grid {
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: 2rem;
    }
    
    .headshot-container {
      width: 180px;
      height: 180px;
    }
  }
</style>
