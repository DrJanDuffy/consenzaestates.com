
---
const { images } = Astro.props;
---

<section class="headshot-gallery-section">
  <div class="headshot-container">
    <div class="headshot-main">
      <img src="/assets/images/headshots/jan-duffy-1.jpg" alt="Dr. Jan Duffy Professional Headshot" id="main-headshot" />
      <div class="headshot-overlay">
        <h3>Dr. Jan Duffy</h3>
        <p>Las Vegas Luxury Real Estate Specialist</p>
      </div>
    </div>
    
    <div class="headshot-thumbs">
      <div class="headshot-thumb active" data-src="/assets/images/headshots/jan-duffy-1.jpg">
        <img src="/assets/images/headshots/jan-duffy-1.jpg" alt="Dr. Jan Duffy" />
      </div>
      <div class="headshot-thumb" data-src="/assets/images/headshots/jan-duffy-2.jpg">
        <img src="/assets/images/headshots/jan-duffy-2.jpg" alt="Dr. Jan Duffy" />
      </div>
      <div class="headshot-thumb" data-src="/assets/images/headshots/jan-duffy-3.jpg">
        <img src="/assets/images/headshots/jan-duffy-3.jpg" alt="Dr. Jan Duffy" />
      </div>
      <div class="headshot-thumb" data-src="/assets/images/headshots/jan-duffy-4.jpg">
        <img src="/assets/images/headshots/jan-duffy-4.jpg" alt="Dr. Jan Duffy" />
      </div>
      <div class="headshot-thumb" data-src="/assets/images/headshots/jan-duffy-5.jpg">
        <img src="/assets/images/headshots/jan-duffy-5.jpg" alt="Dr. Jan Duffy" />
      </div>
    </div>
  </div>
  
  <div class="agent-credentials">
    <div class="credential-item">
      <div class="credential-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="8" r="7"></circle>
          <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
        </svg>
      </div>
      <div class="credential-content">
        <h3>Certified Luxury Home Marketing Specialist</h3>
        <p>Specialized training for high-end property representation</p>
      </div>
    </div>
    
    <div class="credential-item">
      <div class="credential-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
          <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
        </svg>
      </div>
      <div class="credential-content">
        <h3>Certified New Home Specialist</h3>
        <p>Expert in new construction and builder representation</p>
      </div>
    </div>
    
    <div class="credential-item">
      <div class="credential-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
          <path d="M2 17l10 5 10-5"></path>
          <path d="M2 12l10 5 10-5"></path>
        </svg>
      </div>
      <div class="credential-content">
        <h3>Top 1% of Las Vegas Real Estate Professionals</h3>
        <p>Consistently recognized for outstanding performance</p>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mainHeadshot = document.getElementById('main-headshot');
    const thumbnails = document.querySelectorAll('.headshot-thumb');
    
    thumbnails.forEach(thumb => {
      thumb.addEventListener('click', () => {
        // Update active class
        thumbnails.forEach(t => t.classList.remove('active'));
        thumb.classList.add('active');
        
        // Update main image with fade effect
        mainHeadshot.style.opacity = '0';
        setTimeout(() => {
          mainHeadshot.src = thumb.getAttribute('data-src');
          mainHeadshot.style.opacity = '1';
        }, 300);
      });
    });
  });
</script>

<style>
.headshot-gallery-section {
  padding: 2rem 0;
}

.headshot-container {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 2rem;
}

.headshot-main {
  position: relative;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: var(--luxury-shadow-md, 0 10px 15px rgba(0,0,0,0.1));
}

.headshot-main img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: opacity 0.3s ease, transform 0.5s ease;
}

.headshot-main:hover img {
  transform: scale(1.05);
}

.headshot-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 1.5rem;
  background: linear-gradient(to top, rgba(0,0,0,0.8), rgba(0,0,0,0));
  color: white;
}

.headshot-overlay h3 {
  margin-bottom: 0.5rem;
  font-weight: 700;
}

.headshot-thumbs {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.headshot-thumb {
  cursor: pointer;
  border-radius: 8px;
  overflow: hidden;
  opacity: 0.7;
  transition: opacity 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
  height: 100px;
}

.headshot-thumb img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.headshot-thumb:hover, .headshot-thumb.active {
  opacity: 1;
  transform: translateX(5px);
  box-shadow: var(--luxury-shadow-sm, 0 4px 6px rgba(0,0,0,0.05));
}

.headshot-thumb.active {
  border: 2px solid var(--luxury-gold, #D4AF37);
}

.agent-credentials {
  margin-top: 3rem;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.credential-item {
  display: flex;
  align-items: flex-start;
  background: var(--theme-surface-1);
  padding: 1.5rem;
  border-radius: 8px;
  box-shadow: var(--luxury-shadow-sm, 0 4px 6px rgba(0,0,0,0.05));
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.credential-item:hover {
  transform: translateY(-5px);
  box-shadow: var(--luxury-shadow-md, 0 10px 15px rgba(0,0,0,0.1));
}

.credential-icon {
  width: 40px;
  height: 40px;
  margin-right: 1rem;
  color: var(--luxury-gold, #D4AF37);
}

.credential-content h3 {
  margin-bottom: 0.5rem;
  font-size: 1.1rem;
}

.credential-content p {
  font-size: 0.9rem;
  color: var(--theme-on-bg);
  opacity: 0.8;
}

@media (max-width: 768px) {
  .headshot-container {
    grid-template-columns: 1fr;
  }
  
  .headshot-thumbs {
    flex-direction: row;
    flex-wrap: wrap;
  }
  
  .headshot-thumb {
    width: calc(20% - 0.8rem);
    height: 80px;
  }
  
  .headshot-thumb:hover, .headshot-thumb.active {
    transform: translateY(-5px);
  }
}
</style>
