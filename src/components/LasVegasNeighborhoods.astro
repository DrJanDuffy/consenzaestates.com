
---
// LasVegasNeighborhoods.astro - Display featured Las Vegas luxury neighborhoods
const { title = "Luxury Las Vegas Neighborhoods" } = Astro.props;

// Featured neighborhoods
const neighborhoods = [
  {
    name: "Consenza Estates",
    image: "/assets/images/neighborhoods/consenza-estates.jpg",
    description: "Exclusive gated community featuring Lennar luxury homes",
    link: "/consenza-estates"
  },
  {
    name: "The Ridges",
    image: "/assets/images/neighborhoods/the-ridges.jpg",
    description: "Premier Summerlin community with spectacular mountain views",
    link: "/areas/the-ridges"
  },
  {
    name: "MacDonald Highlands",
    image: "/assets/images/neighborhoods/macdonald-highlands.jpg",
    description: "Henderson's most prestigious guard-gated community",
    link: "/areas/macdonald-highlands"
  },
  {
    name: "Ascaya",
    image: "/assets/images/neighborhoods/ascaya.jpg",
    description: "Extraordinary hillside estates with panoramic views",
    link: "/areas/ascaya"
  }
];
---

<section class="neighborhoods-section">
  <div class="luxury-container">
    <div class="section-header">
      <h2>{title}</h2>
      <p class="subtitle">Discover the most sought-after luxury communities in Las Vegas</p>
    </div>
    
    <div class="neighborhoods-grid">
      {neighborhoods.map((neighborhood) => (
        <a href={neighborhood.link} class="neighborhood-card">
          <div class="img-container">
            <img 
              src={neighborhood.image} 
              alt={neighborhood.name} 
              onError={(e) => {
                e.target.onerror = null;
                e.target.src = '/assets/images/neighborhoods/placeholder.jpg';
              }}
            />
          </div>
          <div class="neighborhood-info">
            <h3 class="neighborhood-name">{neighborhood.name}</h3>
            <p class="neighborhood-description">{neighborhood.description}</p>
            <span class="explore-link">Explore <span class="arrow">→</span></span>
          </div>
        </a>
      ))}
    </div>
    
    <div class="neighborhoods-footer">
      <a href="/areas" class="view-all-link">
        View All Las Vegas Luxury Neighborhoods
        <span class="arrow">→</span>
      </a>
    </div>
  </div>
</section>

<style>
  .neighborhoods-section {
    padding: 5rem 0;
    background-color: var(--theme-bg);
  }
  
  .luxury-container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
  }
  
  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--theme-on-bg);
  }
  
  .subtitle {
    font-size: 1.1rem;
    color: var(--theme-on-bg);
    opacity: 0.8;
    max-width: 700px;
    margin: 0 auto;
  }
  
  .neighborhoods-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }
  
  .neighborhood-card {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: var(--luxury-shadow-md);
    transition: transform 0.4s ease, box-shadow 0.4s ease;
    position: relative;
    display: block;
    text-decoration: none;
    color: var(--theme-on-bg);
    height: 350px;
  }
  
  .neighborhood-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--luxury-shadow-lg);
  }
  
  .img-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
  
  .img-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }
  
  .neighborhood-card:hover .img-container img {
    transform: scale(1.05);
  }
  
  .neighborhood-info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.5rem;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.4), transparent);
    color: white;
    transition: transform 0.3s ease;
  }
  
  .neighborhood-card:hover .neighborhood-info {
    transform: translateY(-5px);
  }
  
  .neighborhood-name {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }
  
  .neighborhood-description {
    font-size: 0.9rem;
    margin-bottom: 1rem;
    opacity: 0.9;
  }
  
  .explore-link {
    font-size: 0.9rem;
    font-weight: 500;
    display: inline-block;
    padding-bottom: 2px;
    border-bottom: 1px solid var(--vegas-gold, var(--luxury-gold));
    color: var(--vegas-gold-light, var(--luxury-gold-light));
  }
  
  .arrow {
    display: inline-block;
    margin-left: 3px;
    transition: transform 0.3s ease;
  }
  
  .neighborhood-card:hover .arrow,
  .view-all-link:hover .arrow {
    transform: translateX(3px);
  }
  
  .neighborhoods-footer {
    margin-top: 3rem;
    text-align: center;
  }
  
  .view-all-link {
    display: inline-flex;
    align-items: center;
    color: var(--vegas-gold, var(--luxury-gold));
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--vegas-gold, var(--luxury-gold));
    border-radius: 4px;
  }
  
  .view-all-link:hover {
    background-color: var(--vegas-gold, var(--luxury-gold));
    color: white;
  }
  
  @media (max-width: 768px) {
    .neighborhoods-grid {
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      gap: 1.5rem;
    }
    
    .neighborhood-card {
      height: 280px;
    }
  }
</style>
