---
import Container  from '../core/Container.astro';
import Plug from './Plug.astro';

const { footerSocials, footerLists, copyrightName, background, color, showPlug: showPlug = true } =
  Astro.props;
---

<footer
  style={background && `--footer-bg:${background}; --footer-color:${color}`}
  class="luxury-footer"
>
  <div class="luxury-divider"></div>
  <Container>
    <div class="footer-grid__container">
      <div class="footer-brand__container">
        <div class="footer-logo">
          <slot name="logo" />
          <div class="footer-contact">
            <p class="address">7131 Windsor Downs Ave, Las Vegas, NV 89113</p>
            <p class="phone"><a href="tel:+17025001955">(702) 500-1955</a></p>
            <p class="email"><a href="mailto:DrDuffy@bhhsnv.com">DrDuffy@bhhsnv.com</a></p>
          </div>
        </div>
        <ul class="footer-socials__list">
          {
            footerSocials.map((social) => (
              <li class="footer-socials__item">
                <a
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="footer-socials__link"
                  title={`Open ${social.name} profile`}
                >
                  {social.name === 'Facebook' && (
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24"><path d="M22.675 0h-21.35C.595 0 0 .592 0 1.326v21.348C0 23.408.595 24 1.326 24h11.495v-9.294H9.691v-3.622h3.13V8.413c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.797.143v3.24l-1.918.001c-1.504 0-1.797.715-1.797 1.763v2.313h3.587l-.467 3.622h-3.12V24h6.116C23.406 24 24 23.408 24 22.674V1.326C24 .592 23.406 0 22.675 0"/></svg>
                  )}
                  {social.name === 'Instagram' && (
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 1.366.062 2.633.334 3.608 1.308.974.974 1.246 2.241 1.308 3.608.058 1.266.07 1.646.07 4.85s-.012 3.584-.07 4.85c-.062 1.366-.334 2.633-1.308 3.608-.974.974-2.241 1.246-3.608 1.308-1.266.058-1.646.07-4.85.07s-3.584-.012-4.85-.07c-1.366-.062-2.633-.334-3.608-1.308-.974-.974-1.246-2.241-1.308-3.608C2.175 15.647 2.163 15.267 2.163 12s.012-3.584.07-4.85c.062-1.366.334-2.633 1.308-3.608.974-.974 2.241-1.246 3.608-1.308C8.416 2.175 8.796 2.163 12 2.163zm0-2.163C8.741 0 8.332.013 7.052.072 5.771.131 4.659.425 3.678 1.406c-.98.98-1.274 2.092-1.334 3.374C2.013 5.668 2 6.077 2 12c0 5.923.013 6.332.072 7.612.06 1.282.354 2.394 1.334 3.374.98.98 2.092 1.274 3.374 1.334C8.332 23.987 8.741 24 12 24s3.668-.013 4.948-.072c1.282-.06 2.394-.354 3.374-1.334.98-.98 1.274-2.092 1.334-3.374.059-1.28.072-1.689.072-7.612 0-5.923-.013-6.332-.072-7.612-.06-1.282-.354-2.394-1.334-3.374-.98-.98-2.092-1.274-3.374-1.334C15.668.013 15.259 0 12 0zm0 5.838a6.162 6.162 0 1 0 0 12.324 6.162 6.162 0 0 0 0-12.324zm0 10.162a3.999 3.999 0 1 1 0-7.998 3.999 3.999 0 0 1 0 7.998zm6.406-11.845a1.44 1.44 0 1 0 0 2.881 1.44 1.44 0 0 0 0-2.881z"/></svg>
                  )}
                  {social.name === 'Twitter' && (
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557a9.83 9.83 0 0 1-2.828.775 4.932 4.932 0 0 0 2.165-2.724c-.951.555-2.005.959-3.127 1.184A4.916 4.916 0 0 0 16.616 3c-2.717 0-4.924 2.206-4.924 4.924 0 .386.044.763.127 1.124C7.728 8.807 4.1 6.884 1.671 3.965c-.423.724-.666 1.561-.666 2.475 0 1.708.87 3.216 2.188 4.099a4.904 4.904 0 0 1-2.229-.616c-.054 2.281 1.581 4.415 3.949 4.89a4.936 4.936 0 0 1-2.224.084c.627 1.956 2.444 3.377 4.6 3.417A9.867 9.867 0 0 1 0 21.543a13.94 13.94 0 0 0 7.548 2.212c9.058 0 14.009-7.513 14.009-14.009 0-.213-.005-.425-.014-.636A10.012 10.012 0 0 0 24 4.557z"/></svg>
                  )}
                  {social.name === 'LinkedIn' && (
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24"><path d="M22.23 0H1.77C.792 0 0 .771 0 1.723v20.554C0 23.229.792 24 1.77 24h20.46C23.208 24 24 23.229 24 22.277V1.723C24 .771 23.208 0 22.23 0zM7.12 20.452H3.56V9h3.56v11.452zM5.34 7.633a2.07 2.07 0 1 1 0-4.14 2.07 2.07 0 0 1 0 4.14zm15.112 12.819h-3.56v-5.604c0-1.336-.025-3.058-1.865-3.058-1.867 0-2.153 1.454-2.153 2.957v5.705h-3.56V9h3.418v1.561h.049c.477-.902 1.637-1.852 3.37-1.852 3.602 0 4.267 2.37 4.267 5.455v6.288z"/></svg>
                  )}
                  {social.name === 'Youtube' && (
                    <svg width="24" height="24" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a2.993 2.993 0 0 0-2.107-2.117C19.24 3.5 12 3.5 12 3.5s-7.24 0-9.391.569A2.993 2.993 0 0 0 .502 6.186C0 8.338 0 12 0 12s0 3.662.502 5.814a2.993 2.993 0 0 0 2.107 2.117C4.76 20.5 12 20.5 12 20.5s7.24 0 9.391-.569a2.993 2.993 0 0 0 2.107-2.117C24 15.662 24 12 24 12s0-3.662-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
                  )}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      {
        footerLists.map((list) => (
          <div class="footer-links-column">
            <p class="gold-accent"><strong>{list.title}</strong></p>
            <ul class="footer-link__list">
              {list.items.map((item) => (
                <li>
                  <a href={item.slug}>{item.title}</a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
    <div class="footer-copyright__container">
      {showPlug && <Plug/>}
      <p>Copyright &copy; {new Date().getFullYear()} {copyrightName} | <span class="gold-text">Luxury Real Estate</span></p>
    </div>
  </Container>
</footer>

<style>
  footer {
    --footer-bg: var(--theme-primary);
    --footer-color: var(--theme-on-primary);
    min-height: 40vh;
    background-color: var(--footer-bg);
    color: var(--footer-color);
    border-top-left-radius: var(--theme-shape-radius);
    border-top-right-radius: var(--theme-shape-radius);
    position: relative;
  }
  
  .luxury-footer {
    background: linear-gradient(to bottom, var(--luxury-black), #000);
    color: var(--luxury-white);
    box-shadow: 0 -10px 30px rgba(0,0,0,0.1);
  }
  
  .luxury-divider {
    height: 3px;
    background: var(--luxury-gradient);
    margin: 0;
    width: 100%;
  }
  
  .footer-grid__container {
    padding: 6vh 0 1rem 0;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
  }
  
  .footer-logo {
    margin-bottom: 1.5rem;
  }
  
  .footer-contact {
    margin-top: 1.5rem;
    font-size: 0.9rem;
  }
  
  .footer-contact p {
    display: flex;
    align-items: center;
    margin-bottom: 0.5rem;
  }
  
  .footer-contact svg {
    margin-right: 8px;
    color: var(--luxury-gold);
  }
  
  .footer-contact a {
    color: var(--luxury-white);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .footer-contact a:hover {
    color: var(--luxury-gold);
  }
  
  .footer-socials__list {
    margin: 1rem 0;
    padding: 0;
    display: flex;
    list-style: none;
  }
  
  .footer-socials__item {
    margin-right: 1rem;
  }
  
  .footer-socials__link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(255,255,255,0.05);
    color: var(--luxury-white);
    transition: all 0.3s ease;
  }
  
  .footer-socials__link:hover {
    background-color: var(--luxury-gold);
    color: var(--luxury-black);
    transform: translateY(-3px);
  }
  
  .footer-links-column {
    padding-left: 1rem;
  }
  
  .gold-accent {
    position: relative;
    display: inline-block;
    margin-bottom: 1.5rem;
    font-family: var(--serif-font);
  }
  
  .gold-accent::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -8px;
    width: 30px;
    height: 2px;
    background-color: var(--luxury-gold);
  }
  
  .footer-link__list {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  
  .footer-link__list li {
    margin-bottom: 0.8rem;
  }
  
  .footer-link__list li a {
    text-decoration: none;
    position: relative;
    padding-left: 0;
    transition: all 0.3s ease;
  }
  
  .footer-link__list li a::before {
    content: '';
    position: absolute;
    width: 0;
    height: 1px;
    bottom: -2px;
    left: 0;
    background-color: var(--luxury-gold);
    transition: width 0.3s ease;
  }
  
  .footer-link__list li a:hover {
    padding-left: 5px;
    color: var(--luxury-gold);
  }
  
  .footer-link__list li a:hover::before {
    width: 100%;
  }
  
  .footer-copyright__container {
    display: flex;
    flex-direction: column;
    padding: 2rem 0;
    border-top: 1px solid rgba(255,255,255,0.1);
    margin-top: 2rem;
  }
  
  .footer-copyright__container p {
    font-size: var(--font-size-sm);
    text-align: center;
  }
  
  .gold-text {
    color: var(--luxury-gold);
    font-weight: 500;
  }
  
  @media (max-width: 768px) {
    .footer-grid__container :first-child {
      grid-column: 1/-1;
    }
    .footer-grid__container {
      padding: 5vh 0;
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
    .footer-links-column {
      padding-left: 0;
    }
  }
  
  @media (max-width: 600px) {
    .footer-grid__container {
      padding: 5vh 0;
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .footer-copyright__container {
      flex-direction: column;
    }
  }
</style>

