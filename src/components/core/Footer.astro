---
import { Icon } from 'astro-icon/components';
import Container  from '../core/Container.astro';
import Plug from './Plug.astro';

const { footerSocials, footerLists, copyrightName, background, color, showPlug: showPlug = true } =
  Astro.props;
---

<footer
  style={background && `--footer-bg:${background}; --footer-color:${color}`}
  class="luxury-footer"
>
  <div class="luxury-divider"></div>
  <Container>
    <div class="footer-grid__container">
      <div class="footer-brand__container">
        <div class="footer-logo">
          <slot name="logo" />
          <div class="footer-contact">
            <p class="address"><Icon name="mdi:map-marker" width={16} height={16} /> 7131 Windsor Downs Ave, Las Vegas, NV 89113</p>
            <p class="phone"><Icon name="mdi:phone" width={16} height={16} /> <a href="tel:+17025001955">(702) 500-1955</a></p>
            <p class="email"><Icon name="mdi:email" width={16} height={16} /> <a href="mailto:DrDuffy@bhhsnv.com">DrDuffy@bhhsnv.com</a></p>
          </div>
        </div>
        <ul class="footer-socials__list">
          {
            footerSocials.map((social) => (
              <li class="footer-socials__item">
                <a
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="footer-socials__link"
                  title={`Open ${social.name} profile`}
                >
                  <Icon name={social.icon} width={24} height={24} />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      {
        footerLists.map((list) => (
          <div class="footer-links-column">
            <p class="gold-accent"><strong>{list.title}</strong></p>
            <ul class="footer-link__list">
              {list.items.map((item) => (
                <li>
                  <a href={item.slug}>{item.title}</a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
    <div class="footer-copyright__container">
      {showPlug && <Plug/>}
      <p>Copyright &copy; {new Date().getFullYear()} {copyrightName} | <span class="gold-text">Luxury Real Estate</span></p>
    </div>
  </Container>
</footer>

<style>
  footer {
    --footer-bg: var(--theme-primary);
    --footer-color: var(--theme-on-primary);
    min-height: 40vh;
    background-color: var(--footer-bg);
    color: var(--footer-color);
    border-top-left-radius: var(--theme-shape-radius);
    border-top-right-radius: var(--theme-shape-radius);
    position: relative;
  }
  
  .luxury-footer {
    background: linear-gradient(to bottom, var(--luxury-black), #000);
    color: var(--luxury-white);
    box-shadow: 0 -10px 30px rgba(0,0,0,0.1);
  }
  
  .luxury-divider {
    height: 3px;
    background: var(--luxury-gradient);
    margin: 0;
    width: 100%;
  }
  
  .footer-grid__container {
    padding: 6vh 0 1rem 0;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
  }
  
  .footer-logo {
    margin-bottom: 1.5rem;
  }
  
  .footer-contact {
    margin-top: 1.5rem;
    font-size: 0.9rem;
  }
  
  .footer-contact p {
    display: flex;
    align-items: center;
    margin-bottom: 0.5rem;
  }
  
  .footer-contact svg {
    margin-right: 8px;
    color: var(--luxury-gold);
  }
  
  .footer-contact a {
    color: var(--luxury-white);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .footer-contact a:hover {
    color: var(--luxury-gold);
  }
  
  .footer-socials__list {
    margin: 1rem 0;
    padding: 0;
    display: flex;
    list-style: none;
  }
  
  .footer-socials__item {
    margin-right: 1rem;
  }
  
  .footer-socials__link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(255,255,255,0.05);
    color: var(--luxury-white);
    transition: all 0.3s ease;
  }
  
  .footer-socials__link:hover {
    background-color: var(--luxury-gold);
    color: var(--luxury-black);
    transform: translateY(-3px);
  }
  
  .footer-links-column {
    padding-left: 1rem;
  }
  
  .gold-accent {
    position: relative;
    display: inline-block;
    margin-bottom: 1.5rem;
    font-family: var(--serif-font);
  }
  
  .gold-accent::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -8px;
    width: 30px;
    height: 2px;
    background-color: var(--luxury-gold);
  }
  
  .footer-link__list {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  
  .footer-link__list li {
    margin-bottom: 0.8rem;
  }
  
  .footer-link__list li a {
    text-decoration: none;
    position: relative;
    padding-left: 0;
    transition: all 0.3s ease;
  }
  
  .footer-link__list li a::before {
    content: '';
    position: absolute;
    width: 0;
    height: 1px;
    bottom: -2px;
    left: 0;
    background-color: var(--luxury-gold);
    transition: width 0.3s ease;
  }
  
  .footer-link__list li a:hover {
    padding-left: 5px;
    color: var(--luxury-gold);
  }
  
  .footer-link__list li a:hover::before {
    width: 100%;
  }
  
  .footer-copyright__container {
    display: flex;
    flex-direction: column;
    padding: 2rem 0;
    border-top: 1px solid rgba(255,255,255,0.1);
    margin-top: 2rem;
  }
  
  .footer-copyright__container p {
    font-size: var(--font-size-sm);
    text-align: center;
  }
  
  .gold-text {
    color: var(--luxury-gold);
    font-weight: 500;
  }
  
  @media (max-width: 768px) {
    .footer-grid__container :first-child {
      grid-column: 1/-1;
    }
    .footer-grid__container {
      padding: 5vh 0;
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
    .footer-links-column {
      padding-left: 0;
    }
  }
  
  @media (max-width: 600px) {
    .footer-grid__container {
      padding: 5vh 0;
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .footer-copyright__container {
      flex-direction: column;
    }
  }
</style>

